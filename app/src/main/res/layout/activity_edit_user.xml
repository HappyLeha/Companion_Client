<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtviewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_weight="1"
            android:background="#4169e1"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtviewLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Логин"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="26sp"/>
        <EditText
            android:id="@+id/etextLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:hint="Логин"/>
        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Сменить пароль"/>
        <TextView
            android:id="@+id/txtviewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:textSize="26sp"/>
        <EditText
            android:id="@+id/etextNewPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:visibility="gone"
            android:hint="Пароль"/>
        <EditText
            android:id="@+id/etextRepeatPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:visibility="gone"
            android:hint="Повторите Пароль"/>
        <TableLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:id="@+id/txtviewDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Водитель"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:textSize="26sp"/>
                <TextView
                    android:id="@+id/txtviewDriverResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:textSize="26sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtviewPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Пассажир"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:textSize="26sp"/>
                <TextView
                    android:id="@+id/txtviewPassengerResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:textSize="26sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtviewRaiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг"
                    android:layout_weight="0.5"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:textSize="26sp"/>
                <TextView
                    android:id="@+id/txtviewRaitingResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:textSize="26sp"/>
            </TableRow>
        </TableLayout>
        <EditText
            android:id="@+id/etextPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:hint="Текущий пароль"/>
        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="#4169e1"
            android:textColor="#ffffff"
            android:text="Изменить"/>
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="#4169e1"
            android:textColor="#ffffff"
            android:text="Удалить"/>
    </LinearLayout>
</ScrollView>